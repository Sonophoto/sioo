sp {chase*elaborate*state*sound-direction
   (state <s> ^name chase
              ^io.input-link.sound <sound>)
   -->
   (<s> ^sound-direction <sound>)}

sp {chase*elaborate*radar
   :i-support
   (state <s> ^name chase
              ^operator.actions <a>
              ^io.input-link.radar-status off)
   -->
   (<a> ^radar.switch on
        ^radar-power.setting 13)}
